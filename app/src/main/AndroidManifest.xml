<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pucese.pucesegram">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ContainerActivity"></activity>
        <activity
            android:name=".view.PictureDetailActivity"
            android:parentActivityName=".view.ContainerActivity" />
        <activity
            android:name=".view.ResetPasswordActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_referencia"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CreateAccountActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:parentActivityName=".LoginActivity" />

        <meta-data
            android:name="andorid.support.PARENT_ACTIVITY"
            android:value=".LoginActivity" />

        <activity
            android:name=".ReferenciaActivity"
            android:label="ReferenciaActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>